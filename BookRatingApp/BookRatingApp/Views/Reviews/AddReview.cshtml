@model Review

@{
    ViewData["Title"] = "AddReview";
}
<style>
    body {
        background-color: #fffacd;
        font-family: Arial, sans-serif;
    }

    h1 {
        text-align: center;
        color: #ffcc00;
        margin-bottom: 20px;
    }

    h4 {
        text-align: center;
        color: #ff9900;
    }

    .form-container {
        background-color: #ffffe0;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1); 
        max-width: 400px;
        margin: 30px auto; 
    }

    .form-group label {
        color: #ff9900; 
    }

    .btn-primary {
        background-color: #ffcc00;
        border-color: #ffcc00;
    }

        .btn-primary:hover {
            background-color: #ffb700;
            border-color: #ffb700;
        }

    a {
        color: #ff9900;
        text-decoration: none;
    }

        a:hover {
            color: #ffcc00;
            text-decoration: underline;
        }

    .text-danger {
        color: #cc3300;
    }
</style>

<div class="form-container">


<h1>AddReview</h1>


<h4>Review</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddReview" asp-controller="Reviews" method="post">
            <input type="hidden" asp-for="BookId" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Reviewer" class="control-label"></label>
                <input asp-for="Reviewer" class="form-control" />
                <span asp-validation-for="Reviewer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
