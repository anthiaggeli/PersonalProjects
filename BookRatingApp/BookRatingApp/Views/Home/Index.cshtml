@model List<BookRatingApp.Models.Book>

@{
    ViewData["Title"] = "Λίστα Βιβλίων";
}

<h1 class="my-4">📚 Λίστα Βιβλίων</h1>

<p>
    <a href="/Books/Create" class="btn btn-primary">
        ➕ Προσθήκη νέου βιβλίου
    </a>
</p>

@if (Model == null)
{
    <p class="text-danger">Άδεια λίστα βιβλίων.</p>
}
else
{
    @if (!Model.Any())
    {
        <p class="text-warning">Δεν υπάρχουν βιβλία.</p>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Τίτλος</th>
                    <th>Συγγραφέας</th>
                    <th>Είδος</th>
                    <th>Κριτικές</th>
                    <th>Ενέργειες</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td>@book.Title</td>
                        <td>@book.Author</td>
                        <td>@book.Genre</td>
                        <td>@book.Reviews.Count</td>
                        <td>
                            <a href="/Books/Details/@book.Id" class="btn btn-info btn-sm">
                                Προβολή
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
