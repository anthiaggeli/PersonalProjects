@model List<Book>

@{
	ViewData["Title"] = "Λίστα Βιβλίων";

}
<style>
    body {
        background-color: #e6ccff; 
        color: #4b0082; 
        font-family: Arial, sans-serif;
        text-align: center;
    }

    h1 {
        color: #4b0082;
        margin-bottom: 20px;
    }

    .btn-primary {
        background-color: #6a0dad; 
        border-color: #6a0dad;
    }

    .btn-primary:hover {
        background-color: #5b0c9b;
        border-color: #5b0c9b;
    }

    .table {
        background-color: #f9f2ff; 
        border: 1px solid #6a0dad;
        margin: 0 auto;

    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #ede3ff; 
    }

    .table-bordered th,
    .table-bordered td {
        border-color: #6a0dad;
        text-align: center;
    }

    .table-dark th {
        background-color: #4b0082; 
        color: #ffffff;
        text-align: center;
    }

    a {
        color: #4b0082;
        text-decoration: none;
    }

    a:hover {
        color: #6a0dad;
        text-decoration: underline;
    }
</style>

<h1 class="my-4">📚 Λίστα Βιβλίων</h1>

<p>
	<a href="/Books/Create" class="btn btn-primary">
		➕ Προσθήκη νέου βιβλίου
	</a>
</p>

@if (Model == null || !Model.Any())
{
	<p class="text-danger">Άδεια λίστα βιβλίων.</p>
}
else
{
	<table class="table table-striped table-bordered">
		<thead class="table-dark">
			<tr>
				<th>Τίτλος</th>
				<th>Συγγραφέας</th>
				<th>Είδος</th>
				<th>Κριτικές</th>
		</thead>
		<tbody>
			@foreach (var book in Model)
			{
				<tr>
					<td>
						<a asp-controller="Reviews" asp-action="AddReview" asp-route-bookId="@book.Id">
							@book.Title
						</a>
					</td>
					<td>@book.Author</td>
					<td>@book.Genre</td>
					<td>
						<a asp-controller="Reviews" asp-action="Index" asp-route-bookId="@book.Id">

							@book.Reviews.Count
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
